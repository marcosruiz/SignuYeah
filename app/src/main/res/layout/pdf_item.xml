<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pdf_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/pdf_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/pdf_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pdf_image"
        android:text="NoN"
        android:layout_toRightOf="@+id/pdf_image" />

    <TextView
        android:id="@+id/pdf_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pdf_name"
        android:layout_toEndOf="@+id/pdf_image"
        android:text="NoN"
        android:layout_toRightOf="@+id/pdf_image" />


</RelativeLayout>