<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPathPdfKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selection" />

        <TextView
            android:id="@+id/textViewPathPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None" />

        <Button
            android:id="@+id/buttonSelectPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select PDF file" />

        <TextView
            android:id="@+id/textViewSelectSignersKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select signers" />

        <ListView
            android:id="@+id/listViewUsers"
            android:layout_width="match_parent"
            android:layout_height="200dp" >
        </ListView>

        <Button
            android:id="@+id/buttonUploadPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Pdf" />

    </LinearLayout>
</RelativeLayout>